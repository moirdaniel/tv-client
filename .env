# Configuración de la aplicación
VITE_APP_NAME=Sitelco.TV
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Aplicación de streaming de TV en vivo

# Configuración de API
VITE_API_URL=https://api.sitelco.tv/channels
VITE_USE_LOCAL_DATA=true
VITE_API_TIMEOUT=10000

# Configuración de programación
VITE_PROGRAM_API_URL=https://api.sitelco.tv/programs
VITE_USE_MOCK_PROGRAM_DATA=true

# Configuración del clima
VITE_WEATHER_API_KEY=your_openweather_api_key
VITE_WEATHER_WIDGET_ENABLED=false

# Configuración de autenticación
VITE_AUTH_ENABLED=false
VITE_DEFAULT_USER=guest
VITE_DEFAULT_PASSWORD=guest

# Configuración de características
VITE_FEATURE_MOVIES=false
VITE_FEATURE_MUSIC=false
VITE_FEATURE_NEWS=false
VITE_FEATURE_WEATHER=false
VITE_FEATURE_FAVORITES=true
VITE_FEATURE_HISTORY=true
VITE_FEATURE_SEARCH=true

# Configuración de publicidad
VITE_ADS_ENABLED=true
VITE_ADS_PROVIDER=local
VITE_ADS_REFRESH_RATE=300000

# Configuración de analíticas
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_PROVIDER=none
